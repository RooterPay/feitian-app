<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorClearPressBg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="test"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>


        <Button
            android:id="@+id/id_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/selector_cbtn_bg"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="0"
        android:background="@color/colorLlBg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_amount_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorClearBg"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/id_tv_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="26dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGrey" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <View style="@style/KeyboardViewHorStyle" />

            <LinearLayout
                style="@style/LayoutStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/id_tv_1"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_2"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_3"
                    style="@style/NumberStyle"
                    android:text="" />

            </LinearLayout>

            <View style="@style/KeyboardViewHorStyle" />

            <LinearLayout
                style="@style/LayoutStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/id_tv_4"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_5"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_6"
                    style="@style/NumberStyle"
                    android:text="" />

            </LinearLayout>

            <View style="@style/KeyboardViewHorStyle" />

            <LinearLayout
                style="@style/LayoutStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/id_tv_7"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_8"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_9"
                    style="@style/NumberStyle"
                    android:text="" />

            </LinearLayout>

            <View style="@style/KeyboardViewHorStyle" />

            <LinearLayout
                style="@style/LayoutStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/id_ll_delete"
                    style="@style/NumberStyle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_delete" />
                </LinearLayout>

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_0"
                    style="@style/NumberStyle"
                    android:text="" />

                <View style="@style/KeyboardViewVerStyle" />

                <TextView
                    android:id="@+id/id_tv_ok"
                    style="@style/NumberStyle"
                    android:text="OK"
                    android:textColor="@color/colorClearPressBg"
                    android:textStyle="bold" />

            </LinearLayout>

            <View style="@style/KeyboardViewHorStyle" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
